---
import Layout from '../layouts/Layout.astro';
import ProposalButton from '../features/voting/ProposalFormButton.tsx';
import DraftProposalList from '../features/voting/DraftProposalList.tsx';
---

<Layout title="Tulsa Web Devs">
  <main class="py-5">
    <div class="mx-auto max-w-[800px] bg-white rounded p-3">
      <div class="flex justify-between items-center mb-3">
        <h1 class="font-bold text-xl">Proposals</h1>

        <ProposalButton client:load />
      </div>

      <DraftProposalList client:load />
    </div>
  </main>
</Layout>
